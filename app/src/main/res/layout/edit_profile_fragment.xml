<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileFragment">

        <EditText
            tools:ignore="Autofill"
            android:hint="@string/profile_name_hint"
            android:inputType="text"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:id="@+id/profile_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            tools:ignore="Autofill"
            android:hint="@string/profile_nickname_hint"
            android:inputType="text"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:id="@+id/profile_nickname_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            tools:ignore="Autofill"
            android:hint="@string/profile_phone_hint"
            android:inputType="phone"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:id="@+id/profile_phone_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            tools:ignore="Autofill"
            android:hint="@string/profile_email_hint"
            android:inputType="textEmailAddress"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:id="@+id/profile_email_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image_edit"
            android:layout_margin="25dp"
            app:civ_border_width="2dp"
            android:src="@drawable/default_profile_pic"
            app:civ_border_color="@color/colorPrimary"
            android:layout_width="150dp"
            android:layout_gravity="center"
            android:layout_height="150dp" />


</LinearLayout>